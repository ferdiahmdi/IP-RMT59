import { createSlice } from "@reduxjs/toolkit";

const initialState = {
  animes: [],
  loading: false,
  error: null
};

const animeSlice = createSlice({
  name: "anime",
  initialState,
  reducers: {
    fetchAnimesStart(state) {
      state.loading = true;
      state.error = null;
    },
    fetchAnimesSuccess(state, action) {
      state.loading = false;
      state.animes = action.payload;
    },
    fetchAnimesFailure(state, action) {
      state.loading = false;
      state.error = action.payload;
    }
  }
});

export const { fetchAnimesStart, fetchAnimesSuccess, fetchAnimesFailure } =
  animeSlice.actions;

export default animeSlice.reducer;
